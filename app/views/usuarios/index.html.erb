<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Admin</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= link_to usuario.nome, show_usuario_path(id: usuario.id) %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.admin %></td>
        <td><%= link_to 'Editar', edit_usuario_path(id: usuario.id) %></td>
        <td><%= link_to "Excluir", destroy_usuario_path(id: usuario.id),
         method: :delete, data: { confirm: 'Certeza da exclusÃ£o ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

